@model ExchangeOnline.Models.SignUp
@{
	Layout = " ~/views/Shared/_Layout.cshtml";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.js")" type="text/javascript"></script>
@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()
	<br />
	<!--Modal: Login / Register Form-->
	<!-- Material form register -->

	<div class="col-md-6 offset-md-3">
		<div class="card">

			<h5 class="card-header peach-gradient white-text text-center py-4">
				<strong>Sign up</strong>
			</h5>
			@if (ViewBag.Message != null)
			{
				<script>
					alert(ViewBag.Message);
				</script>
			}
			<!--Card content-->
			<div class="card-body px-lg-5 pt-0">

				<!-- Form -->

				<form class="text-center" style="color: #757575;">

					<div class="form-row">
						<div class="col">
							<!-- First name -->
							<div class="md-form">
								@Html.TextBoxFor(a => a.FName, new { @id = "txtFName", @class = "form-control validate" })
								@Html.ValidationMessageFor(a => a.FName, "", new { @class = "text-danger" })
								<label for="txtFName" data-error="wrong" data-success="right">First name</label>
							</div>
						</div>
						<div class="col">
							<!-- Last name -->
							<div class="md-form">
								@Html.TextBoxFor(a => a.LName, new { @id = "txtLName", @class = "form-control validate" })
								@Html.ValidationMessageFor(a => a.LName, "", new { @class = "text-danger" })
								<label for="txtLName" data-error="wrong" data-success="right">Last name</label>
							</div>
						</div>
					</div>

					<!-- E-mail -->
					<div class="md-form mt-0">
						@Html.TextBoxFor(a => a.Email, new { @id = "txtEmail", @name="email", @class = "form-control validate" })
						@Html.ValidationMessageFor(a => a.Email, "", new { @class = "text-danger" })
						<label for="txtEmail" data-error="wrong" data-success="right">E-mail</label>
						<span id="msg"></span>
					</div>
					<div class="md-form">
						@Html.TextBoxFor(a => a.MobileNo, new { @id = "txtMobile", @type = "number", @class = "form-control validate" })
						@Html.ValidationMessageFor(a => a.MobileNo, "", new { @class = "text-danger" })
						<label for="txtMobile" data-error="wrong" data-success="right">Mobile number</label>
					</div>

					<!-- Password -->
					<div class="md-form">
						@Html.PasswordFor(a => a.Password, new { @id = "txtPassword", @class = "form-control validate", @onkeyUp = "check();", })
						@Html.ValidationMessageFor(a => a.Password, "", new { @class = "text-danger" })
						<label for="txtPassword" data-error="wrong" data-success="right">Password</label>
						<small id="materialRegisterFormPasswordHelpBlock" class="form-text text-muted mb-4">
							password must be 8 character,1 uppercase,1 lowercase and 1 special character.
						</small>
					
					</div>
					<div class="md-form">
						<input type="password" id="txtConfirmPassword" class="form-control validate" aria-describedby="materialRegisterFormPasswordHelpBlock" onkeyUp="check();">
						<label for="txtConfirmPassword" data-error="wrong" data-success="right">Confirm Password</label>
						<small id="materialRegisterFormPasswordHelpBlock" class="form-text text-muted mb-4">
							password must be 8 character,1 uppercase,1 lowercase and 1 special character.
						</small>
					</div>
					<p id="message"></p>
					<!-- Sign up button -->
					<button class="btn morpheus-den-gradient btn-rounded btn-block my-4 waves-effect z-depth-0" id="btnsignup" type="submit" style="border-radius:15px; ">Sign in</button>
					<!-- Social register -->

					<hr>

					<!-- Terms of service -->
					<p>
						for user Login ?<a href="@Url.Action("Login", "UserAccount")">Login</a>
					</p>
				</form>
				<!-- Form -->

			</div>

		</div>
		<!-- Material form register -->
	</div>
	<br />
}
<script>
	var check = function () {
		if (document.getElementById('txtPassword').value ==
			document.getElementById('txtConfirmPassword').value) {
			document.getElementById('message').style.color = 'green';
			document.getElementById('message').innerHTML = 'matching';
		} else {
			document.getElementById('message').style.color = 'red';
			document.getElementById('message').innerHTML = 'not matching';
		}
	}

</script>