@model IEnumerable<ExchangeOnline.Models.AD>

@{
	Layout = "~/Views/Shared/_Admin.cshtml";
	ViewBag.Title = "AdminADdetail";
}
<br />
<h4 style="text-align:center; color:cornflowerblue;">AD Detail</h4>
<hr style="color:aqua;" /><br />
<div id="dtBasicExample_wrapper" class="dataTables_wrapper dt-bootstrap4">
	<div class="row">
		<div class="col-sm-12 ">
			<div class="table-responsive text-nowrap">
				<table id="dtBasicExample" class="table table-hover table-bordered dataTable " cellspacing="0" width="100" role="grid" aria-describedby="dtBasicExample_info" style="width: 100%;">
					<thead class="aqua-gradient white-text">
						<tr>
							<th>
								#
							</th>
							<th>
								@Html.DisplayNameFor(model => model.Title)
							</th>
							<th>
								@Html.DisplayNameFor(model => model.Brand)
							</th>
							<th>
								@Html.DisplayNameFor(model => model.Description)
							</th>
							<th>
								@Html.DisplayNameFor(model => model.Mobile)
							</th>
							<th>
								@Html.DisplayNameFor(model => model.Price)
							</th>
							<th>
								@Html.DisplayNameFor(model => model.Categories)
							</th>
							<th>
								@Html.DisplayNameFor(model => model.Image)
							</th>
							<th>
								@Html.DisplayNameFor(model => model.State)
							</th>
							<th>
								@Html.DisplayNameFor(model => model.City)
							</th>
							<th>
								@Html.DisplayNameFor(model => model.Pincode)
							</th>
							<th>View</th>
						</tr>
					</thead>
					@foreach (var item in Model)
					{
						<tbody>
							<tr>
								<td>
									@Html.DisplayFor(modelItem => item.ADid)
								</td>
								<td>
									@Html.DisplayFor(modelItem => item.Title)
								</td>
								<td>
									@Html.DisplayFor(modelItem => item.Brand)
								</td>
								<td>
									@Html.DisplayFor(modelItem => item.Description)
								</td>
								<td>
									@Html.DisplayFor(modelItem => item.Mobile)
								</td>
								<td>
									@Html.DisplayFor(modelItem => item.Price)
								</td>
								<td>
									@Html.DisplayFor(modelItem => item.Categories)
								</td>
								<td>
									@Html.DisplayFor(modelItem => item.Image)
								</td>
								<td>
									@Html.DisplayFor(modelItem => item.State)
								</td>
								<td>
									@Html.DisplayFor(modelItem => item.City)
								</td>
								<td>
									@Html.DisplayFor(modelItem => item.Pincode)
								</td>
								<td>
									<a href="@Url.Action("AdminViewProduct", "admin", new { id = item.ADid })" data-tip="More detail"><i class="fas fa-eye" style="color:orangered;"></i></a>
								</td>
							</tr>
						</tbody>

					}

				</table>
				</div>

				</div>
			</div>
</div>