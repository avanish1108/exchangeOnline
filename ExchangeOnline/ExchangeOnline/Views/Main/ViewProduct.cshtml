@model ExchangeOnline.Models.AD
@using System.Text.RegularExpressions;
@{
	ViewBag.Title = "ViewProduct";
	Layout = " ~/views/Shared/_Layout.cshtml";
}
<div>
	<link href="~/css/bjqs.css" rel="stylesheet" />
	<link href='http://fonts.googleapis.com/css?family=Source+Code+Pro|Open+Sans:300' rel='stylesheet' type='text/css'>
	<link href="~/css/demo.css" rel="stylesheet" />
	<script src="~/Content/js/bjqs-1.3.min.js"></script>
	<script src="~/Content/js/jquery.secret-source.min.js"></script>
	<link href="~/css/productView.css" rel="stylesheet" />
	@*<script src="~/Content/js/ZoomEffect.js"></script>*@
	<br />
	<div class="card">
		<div class="row">
			<aside class="col-sm-5 border-right">
				<article class="gallery-wrap">
					<div id="banner-fade" class="">
						<ul class="bjqs">
							@{
								string[] arr = Regex.Split(Model.Image, ",");
							}
							@foreach (var item in arr)
							{
								<li>
									<img src="~/Upload/@item" id="imgProduct" class="" alt="">
								</li>
							}
						</ul>
					</div>
					<script>
						// Initiate zoom effect:
						imageZoom("myimage", "myresult");
					</script>
					<!-- slider-product.// -->
					<!-- slider-nav.// -->
				</article> <!-- gallery-wrap .end// -->
			</aside>
			<aside class="col-sm-7 ">
				<article class="card-body p-5">
					<h3 class="title mb-3">@Model.Title</h3>
					<p class="price-detail-wrap">
						<span class="price h3 text-warning">
							<span class="currency"><i class='fas fa-rupee-sign'></i></span><span class="num">@Model.Price</span>
						</span>
					</p> <!-- price-detail-wrap .// -->
					<dl class="item-property">
						<dt>Description</dt>
						<dd>
							<p>
								@Model.Description
							</p>
						</dd>
					</dl>
					<dl class="param param-feature">
						<dt>Brand</dt>
						<dd>@Model.Brand</dd>
					</dl>  <!-- item-property-hor .// -->
					<dl class="param param-feature">
						<dt>Location</dt>
						<dd>@Model.City ,@Model.State ,India,@Model.Pincode,</dd>
					</dl>  <!-- item-property-hor .// -->
					<dl class="param param-feature">
						<dt>Categories</dt>
						<dd>@Model.Categories</dd>
					</dl>  <!-- item-property-hor .// -->
					<hr>

					@if (Session["Email"] != null)
					{
						<div>
							<p>
								<a class="btn btn-primary" data-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">
									for Contact
								</a>
							</p>
						</div>

						<div class="collapse" id="collapseExample">
							<div class="card card-body">
								@Model.Mobile
							</div>
						</div>
					}
					else
					{

						<a class="btn btn-primary" href="@Url.Action("Login", "UserAccount")">
							for Contact
						</a>


					}

				</article> <!-- card-body.// -->
			</aside> <!-- col.// -->
		</div> <!-- row.// -->
	</div> <!-- card.// -->

</div>
<br />
<script>
	$('#myCollapsible').collapse({
		toggle: true
	})
</script>
<script>
	jQuery(function ($) {
		$('.secret-source').secretSource({
			includeTag: false
		});

		$('#banner-fade').bjqs({
			height: 600,
			width: 600,
			responsive: true
		});
	});
</script>
