<div class="container">
	<h2>Top Product</h2>
	<hr style="background-color: chartreuse;" />
	<div class="row" style="background-color:whitesmoke;">



		@if (Model.Count() != 0)

		{
			foreach (var ad in Model)
			{
				
				<div class="col-md-3 col-sm-6">
					<br />
					<div class="product-grid6">
						<div class="product-image6">
							<a href="#">
								@{
									string[] arr = Regex.Split(ad.Image, ",");
								}
								
								<img class="pic-1" src="~/Upload/@arr[0]" style="height:200px;width:200px;">
							</a>
						</div>
						<div class="product-content">
							<h3 class="title"><a href="#" style="color:crimson;">@ad.Title</a></h3>
							<div class="price">
								<i class='fas fa-rupee-sign'></i> @ad.Price

							</div>
						</div>
						<ul class="social">
							<li><a href="@Url.Action("ViewProduct", "Main", new { id = ad.ADid })" data-tip="More detail"><i class="fa fa-search"></i></a></li>
							@*<li>@Html.ActionLink("ViewProduct","Main", new {id = ad.ADid },new {@class= "fa fa-search",@tooltip="More Detail" })</li>*@
						</ul>
					</div>
					<br />
				</div>
			}
		}
		else
		{
		   <br />
